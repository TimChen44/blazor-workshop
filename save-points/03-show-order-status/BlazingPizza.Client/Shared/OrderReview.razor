@foreach (var pizza in Order.Pizzas)
{
    <AntList DataSource="@pizza.Toppings" Size="small" Style="margin-bottom:8px">
        <Header>
            <Text Strong>
                @(pizza.Size)"
                @pizza.Special.Name
                (￥@pizza.GetFormattedTotalPrice())
            </Text>
        </Header>
        <ChildContent Context="item">
            <ListItem>
                + @item.Topping.Name
            </ListItem>
        </ChildContent>
    </AntList>
}
<Divider></Divider>
<Paragraph>
    <Text Strong>
        Total price:
        ￥@Order.GetFormattedTotalPrice()
    </Text>
</Paragraph>

@code {
    [Parameter] public Order Order { get; set; }
}
